<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/recipes/edit-comment.css" />
<%- include('../partials/nav') %>

<section>
  <div>
    <h1>Edit your comment!</h1>
    <form 
      action="/recipes/<%= recipe._id %>/comments/<%= comment._id %>?_method=PUT"
      method="POST"
    >
      <label>
        Comment Content: 
        <br>
        <textarea
          cols="30"
          rows="5" 
          type="text"
          name="content" 
          autocomplete="off"
        ><%= comment.content %></textarea>
      </label><br>
      <button type="submit" id="update-btn">Update Comment</button>
    </form>
  </div>
</section>

<%- include('../partials/footer') %>