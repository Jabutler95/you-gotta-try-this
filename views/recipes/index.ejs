<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/recipes/index.css">
<%- include('../partials/nav') %>

<main>
  <div class="index-container">
    <div class="index-title">
      <h1>Recipes</h1>
    </div>
    <% recipes.forEach(recipe => { %>
    <div class="recipe-div">
      <div class="recipe-name-div"><%= recipe.recipeName %></div>
      <div class="recipe-btns-div">
      <a href="/recipes/<%= recipe._id %>"><button class="details-btn">View Recipe</button></a>
      </div>
    </div>
    <% }) %>
  </div>
  

  
</main>

<%- include('../partials/footer') %>