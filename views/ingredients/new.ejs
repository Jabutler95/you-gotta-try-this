<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/ingredients/new.css" />
<%- include('../partials/nav') %>

<main>
	<h1><%= title %></h1>
  <p>Please first ensure that the ingredient is not in the dropdown
    <select>
      <% ingredients.forEach(function(ingredient) { %>
        <option><%= ingredient.ingredientName %></option>
      <% }) %>
    </select>
  </p>
  <form id="add-ingredient-form" action="../recipes" method="POST">
    <label for="name-input">Name:</label>
    <input type="text" name="ingredientName" id="name-input">
    <button type="submit">Add Ingredient</button>
  </form>
</main>

<%- include("../partials/footer") %>